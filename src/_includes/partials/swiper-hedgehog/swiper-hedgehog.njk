{% from "components/icon/icon.njk" import icon %}

{% set dataSet = [
    {
        title: "Ежик “Евгений”",
        description: "Очень любит сладости. Маленький сладкоежка=) Мы называем его так между собой. Ручной, любит внимаение ",
        class: "bg-[bottom_right_-6px] translate-y-full top-10 w-[180px] h-[130px] lg:w-[520px] ponter-events-none lg:h-[260px]",
        img: "/images/3.png",
        price: "1 500 ₽",
        oldPrice: "3 000 ₽"
    },
    {
        title: "Ежик “Максим”",
        description: "Немного игривый и задорный характер этого друга никого не оставит равнодушным!",
        img: "/images/4.png",
        class: "bg-[bottom_right_-20px] translate-y-[115%] top-0 w-[180px] h-[130px] lg:w-[380px] ponter-events-none lg:h-[280px] [background-position-y:22px]",
        price: "2 500 ₽",
        oldPrice: "5 000 ₽"
    }
] %}

<section>
    <div class="2xl:max-w-[1920px] mx-auto px-5 pt-20">
        <div class="hedgehogs swiper py-3 relative px-[120px] max-w-[1440px] h-[400px] mx-auto">
            <div class="swiper-wrapper">
                {% for item in dataSet %}
                    <div class="swiper-slide relative z-[9] rounded-xl bg-sandy-beach w-[250px] lg:w-[580px]">
                        <div class="p-1.5 bg-juniper absolute left-4 lg:left-16 -top-1.5 max-w-max text-white font-bold text-xl">
                            <span>-50 %</span>
                        </div>
                        <button class="absolute hidden outline-none focus:outline-none focus-visible:opacity-80 lg:block top-5 right-7 peer max-w-max">
                            {{ icon(
                                name="question",
                                size="w-[37px] h-[37px]",
                                class="ml-auto mr-0"
                            ) }}
                        </button>
                        <div class="absolute right-0 z-10 invisible hidden grid-cols-2 px-8 py-6 text-sm text-white transition-all duration-300 opacity-0 lg:grid translate-x-1/3 top-16 gap-x-8 peer-hover:visible peer-hover:opacity-100 bg-green-pea">
                            <div class="grid items-center grid-flow-col gap-x-1">
                                {{ icon(
                                    name="syringe-white",
                                    size="w-[30px] h-[30px]"
                                ) }}
                                <span>Привит</span>
                            </div>
                            <div class="grid items-center grid-flow-col gap-x-1">
                                {{ icon(
                                    name="heart-white",
                                    size="w-[26px] h-[26px]"
                                ) }}
                                <span>1235</span>
                            </div>
                            <div class="absolute top-0.5 left-[106px] w-10 h-10 z-[-1] rotate-45 bg-green-pea"></div>
                        </div>
                        <div class="grid grid-flow-col pt-3 pr-5 ml-auto mr-0 max-w-max lg:hidden text-green-pie gap-x-4">
                            <div class="grid text-[10px] lg:text-baseitems-center grid-flow-col gap-x-1">
                                {{ icon(
                                    name="syringe",
                                    size="w-[13px] h-[13px]"
                                ) }}
                                <span>Привит</span>
                            </div>
                            <div class="grid text-[10px] lg:text-base items-center grid-flow-col gap-x-1">
                                {{ icon(
                                    name="heart",
                                    size="w-[11px] h-[11px]"
                                ) }}
                                <span>1235</span>
                            </div>
                        </div>
                        <div class="relative grid py-5 overflow-hidde px-7">
                            <div class="grid gap-y-4 lg:mt-10 max-w-[205px]">
                                <p class="font-second text-green-pea font-bold text-[40px] leading-[48px]">{{ item.title }}</p>
                                <p class="text-sm">{{ item.description }}</p>
                                <div class="grid gap-y-2">
                                    <span class="text-xl font-bold line-through font-second text-tiara">{{ item.oldPrice }}</span>
                                    <span class="font-second font-bold text-green-pea text-[40px] leading-[48px]">{{ item.price }}</span>
                                </div>
                            </div>
                            <div class="absolute translate-x-10 lg:translate-x-0 lg:translate-y-1/4 right-0 {{ item.class }} bg-no-repeat bg-cover" style="background-image: url('{{ item.img }}')">
                            </div>
                            <div class="bg-white h-28 w-[200px] -rotate-45 translate-x-1/2 translate-y-1/2 absolute bottom-0 right-0">
                                {{ icon(
                                    name="plus",
                                    size="w-10 h-10",
                                    class="mx-auto rotate-45"
                                ) }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="hidden lg:block -translate-y-1 h-[420px] top-0 w-[120px] bg-white absolute -left-1 rounded-l-lg z-[1] ">
                <button class="absolute rotate-180 left-1/2 top-1/2 hedgehogs-button-prev">
                    {{ icon(
                        name="arrow-right-stroke",
                        size="w-6 h-6"
                    ) }}
            </button>
            </div>
            <div class="hidden lg:block -translate-y-1 h-[420px] top-0 w-[120px] bg-white absolute rounded-r-lg -right-1 z-[1] ">
                <button class="absolute right-1/2 hedgehogs-button-next top-1/2">
                    {{ icon(
                        name="arrow-right-stroke",
                        size="w-6 h-6"
                    ) }}
                </button>
            </div>
        </div>
    </div>
</section>