{% from "components/icon/icon.njk" import icon %}

{% set dataSet = [
    {
        title: "Ежик “Евгений”",
        description: "Очень любит сладости. Маленький сладкоежка=) Мы называем его так между собой. Ручной, любит внимаение ",
        img: "/images/3.png",
        price: "1 500 ₽",
        oldPrice: "3 000 ₽"
    },
    {
        title: "Ежик “Максим”",
        description: "Немного игривый и задорный характер этого друга никого не оставит равнодушным!",
        img: "/images/4.png",
        price: "2 500 ₽",
        oldPrice: "5 000 ₽"
    }
] %}

<section>
    <div class="2xl:max-w-[1920px] px-5 pt-12">
        <div class="hedgehogs max-w-[1200px] h-[400px] mx-auto">
            <div class="swiper-wrapper">
                {% for item in dataSet %}
                    <div class="swiper-slide relative rounded-xl bg-sandy-beach w-[580px]">
                        <div class="p-1.5 bg-juniper absolute left-16 -top-1.5 max-w-max text-white font-bold text-xl">
                            <span>-50 %</span>
                        </div>
                        <button class="absolute top-5 right-7 peer max-w-max">
                            {{ icon(
                                name="question",
                                size="w-[37px] h-[37px]",
                                class="ml-auto mr-0"
                            ) }}
                        </button>
                        <div class="absolute right-0 grid invisible grid-cols-2 px-8 py-6 text-sm text-white transition-all duration-300 opacity-0 translate-x-1/3 z-[1] top-16 gap-x-8 peer-hover:visible peer-hover:opacity-100 bg-green-pea">
                            <div class="grid items-center grid-flow-col gap-x-1">
                                {{ icon(
                                    name="syringe-white",
                                    size="w-[30px] h-[30px]"
                                ) }}
                                <span>Привит</span>
                            </div>
                            <div class="grid items-center grid-flow-col gap-x-1">
                                {{ icon(
                                    name="heart-white",
                                    size="w-[26px] h-[26px]"
                                ) }}
                                <span>1235</span>
                            </div>
                            <div class="absolute top-0.5 left-[106px] w-10 h-10 z-[-1] rotate-45 bg-green-pea"></div>
                        </div>
                        <div class="relative h-full py-5 overflow-hidden bg-left-top bg-no-repeat bg-contain pointer-events-none px-7 w-ful" style="background-image: url('{{ item.img }}')">
                            <div class="grid gap-y-4 mt-10 max-w-[205px]">
                                <p class="font-second text-green-pea font-bold text-[40px] leading-[48px]">{{ item.title }}</p>
                                <p class="text-sm">{{ item.description }}</p>
                                <div class="grid gap-y-2">
                                    <span class="text-xl font-bold line-through font-second text-tiara">{{ item.oldPrice }}</span>
                                    <span class="font-second font-bold text-green-pea text-[40px] leading-[48px]">{{ item.price }}</span>
                                </div>
                            </div>
                            <div class="bg-white h-28 w-[200px] -rotate-45 translate-x-1/2 translate-y-1/2 absolute bottom-0 right-0">
                                {{ icon(
                                    name="plus",
                                    size="w-10 h-10",
                                    class="mx-auto rotate-45"
                                ) }}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="swiper-button-prev">
    
            </div>
            <div class="swiper-button-next">

            </div>
        </div>
    </div>
</section>